<p style="color: green"><%= notice %></p>
<h1>Clients</h1>
<div id="clients">
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th scope="col">id</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="1">See More Info</th>
      </tr>
    </thead>
    <tbody id="myTable">
      <% @clients.each do |client| %>
        <tr>
          <%= render client %>
          <% if client.movies.any? %>
            <td><%= client.movies.last.name %></td>
          <% else %>
            <td>has not rented yet</td>
          <% end %>
          <td><%= link_to "Show this Client", client, class:"btn" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p>
    <%= link_to "New Client", new_client_path, class:"submit button3" %>
  </p>
</div>