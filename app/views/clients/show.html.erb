<p style="color: green"><%= notice %></p>
<h1>Client information</h1>
<table class="table mt-5">
  <thead class="table-dark">
    <tr>
      <th scope="col">id</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
    </tr>
  </thead>
  <tbody>
    <%= render @client %>
  </tbody>
</table>
<h2>RENTED MOVIES</h2>
<table class="table mt-5">
  <thead class="table-dark">
    <tr>
      <th scope="col">id</th>
      <th scope="col">Title</th>
    </tr>
  </thead>
  <tbody>
    <% @client.movies.each do |c| %>
      <tr>
        <td><%= c.id %></td>
        <td><%= c.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="my-5">
  <%= link_to "Edit Info", edit_client_path(@client), class:"btn button3" %> |
  <%= link_to "Back to clients", clients_path, class:"btn button3" %>
  <%= button_to "Delete", @client, method: :delete, class:"btn button3 mt-3" %>
</div>
